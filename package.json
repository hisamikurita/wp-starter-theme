{
  "name": "wp-starter-theme",
  "version": "1.0.0",
  "description": "wordpress starter theme by wp-env & vite",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite",
    "build": "cross-env NODE_ENV=production vite build && npm run press:images",
    "preview": "vite preview",
    "press:images": "node convert.images.mjs -i src/assets/images -o dist/assets/images -w -v -z -t",
    "db:import": "gzip -dfk sql/wpenv.sql.gz && npm run wp:env run cli wp db import sql/wpenv.sql && rm -f sql/wpenv.sql",
    "db:export": "npm run wp:env run cli wp db export sql/wpenv.sql; gzip -f sql/wpenv.sql",
    "wp:env": "wp-env",
    "wp:start": "npm run wp:env start",
    "wp:restart": "npm run wp:env start --update",
    "wp:setup": "npm run wp:start && npm run db:import",
    "wp:destroy": "npm run wp:env destroy",
    "lint:check": "npm run lint:style && npm run lint:es",
    "lint:style": "stylelint 'src/assets/**/*.{css,scss}'",
    "lint:es": "eslint 'src/assets/**/*.js'",
    "lint:fix": "stylelint --fix 'src/assets/**/*.{css,scss}' && eslint --fix 'src/assets/**/*.js'",
    "format": "prettier --write 'src/assets/**/*.{html,css,scss,js,json}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix",
    "*.{html,css,scss,js,json}": "prettier --write"
  },
  "author": "HISAMI KURITA",
  "license": "ISC",
  "devDependencies": {
    "@wordpress/env": "^5.15.0",
    "autoprefixer": "^10.4.14",
    "commander": "^11.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "gsap": "^3.12.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "path": "^0.12.7",
    "postcss": "^8.4.22",
    "prettier": "^2.8.8",
    "sass": "^1.62.0",
    "sharp": "^0.32.6",
    "stylelint": "^15.7.0",
    "stylelint-config-recess-order": "^4.2.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-prettier": "^3.0.0",
    "svgo": "^3.0.2",
    "tailwindcss": "^3.3.1",
    "vite": "^4.2.0",
    "vite-plugin-live-reload": "^3.0.2",
    "vite-plugin-sass-glob-import": "^2.0.0",
    "vite-plugin-static-copy": "^0.14.0",
    "vite-plugin-svg-sprite-component": "^1.0.10",
    "zlib": "^1.0.5"
  }
}
